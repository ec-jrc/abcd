extends layout

block content
  script(src='/static/javascripts/dasa.js')

  h2 Data saving module
  div.display 
    h3 Controls
    p
      label File name: 
        input(type="text" id="file_name")
      button(id="button_start") Start
      button(id="button_stop") Stop
      label #[input(type="checkbox" id="file_automatic_name" checked)] Automatically add "<code>abcd_data_</code>" and datetime to begin of file name
      ul
        li
          label #[input(type="checkbox" id="file_enable_events" checked)] Enable events file
        li
          label #[input(type="checkbox" id="file_enable_waveforms")] Enable waveforms file
        li
          label #[input(type="checkbox" id="file_enable_raw" checked)] Enable raw file
    p
      label New work directory: 
        input(type="text" id="new_work_directory")
      button(id="button_change_work_directory") Change work directory
  div.display 
    h3 Status
    div#module_status
  div.display 
    h3 Events log
    div#events_log.scrollable
  div.columns
    div.column
      div.display 
        h3 Connection status
        p #[strong Computer hostname:] #{hostname}
        p #[strong Name:] #{name} of type #{type}
        p #[strong Webserver connection:] #[span#wit_connection_status.unknown_status No connection]
        p #[strong Module connection:] #[span#module_connection_status.unknown_status No connection]
    div.column
      div.display 
        h3 User interface settings
        p
          label Refresh time [s]:
            input(type="number" id="time_refresh" value="3")
        p
          label Expiration time [s]:
            input(type="number" id="time_expiration" value="10")
